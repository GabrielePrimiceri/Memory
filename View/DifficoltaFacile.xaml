<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectWork_Memory.View.DifficoltaFacile"
             BackgroundColor="#512BD4"                
             Title="DifficoltaFacile">
              

        <Grid RowSpacing="20" Padding="20">
        

        <Grid VerticalOptions="Center"
              HorizontalOptions="Center"
              RowSpacing="10" ColumnSpacing="10"
              WidthRequest="320" HeightRequest="320">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Row="0" Grid.Column="0" BackgroundColor="LightBlue" />
            <Button Grid.Row="0" Grid.Column="1" BackgroundColor="LightBlue" />
            <Button Grid.Row="0" Grid.Column="2" BackgroundColor="LightBlue" />
            <Button Grid.Row="0" Grid.Column="3" BackgroundColor="LightBlue" />

            <Button Grid.Row="1" Grid.Column="0" BackgroundColor="LightBlue" />
            <Button Grid.Row="1" Grid.Column="1" BackgroundColor="LightBlue" />
            <Button Grid.Row="1" Grid.Column="2" BackgroundColor="LightBlue" />
            <Button Grid.Row="1" Grid.Column="3" BackgroundColor="LightBlue" />

            <Button Grid.Row="2" Grid.Column="0" BackgroundColor="LightBlue" />
            <Button Grid.Row="2" Grid.Column="1" BackgroundColor="LightBlue" />
            <Button Grid.Row="2" Grid.Column="2" BackgroundColor="LightBlue" />
            <Button Grid.Row="2" Grid.Column="3" BackgroundColor="LightBlue" />

            <Button Grid.Row="3" Grid.Column="0" BackgroundColor="LightBlue" />
            <Button Grid.Row="3" Grid.Column="1" BackgroundColor="LightBlue" />
            <Button Grid.Row="3" Grid.Column="2" BackgroundColor="LightBlue" />
            <Button Grid.Row="3" Grid.Column="3" BackgroundColor="LightBlue" />
        </Grid>
    </Grid>
</ContentPage>