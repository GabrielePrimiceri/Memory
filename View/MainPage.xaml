<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
             x:Class="ProjectWork_Memory.View.MainPage"
             BackgroundColor="#512BD4"
             Title="">

    <VerticalStackLayout 
        Spacing="25"
        Padding="30,0"
        VerticalOptions="Center">
        <Image 
        Source="logo.png"
        WidthRequest="200"
        HeightRequest="200"
        Aspect="AspectFit"
        HorizontalOptions="Center"
        VerticalOptions="Center" />


        <Button Text="Inizia una partita"
                Clicked="IniziaPartita"
                FontSize="18"
                HeightRequest="60"
                CornerRadius="30"
                BackgroundColor="#4CAF50"
                TextColor="White"/>

        <Button Text="Regolamento"
                Clicked="Regolamento"
                FontSize="18"
                HeightRequest="60"
                CornerRadius="30"
                BackgroundColor="#2196F3"
                TextColor="White"/>

        <Button Text="Esci"
                FontSize="18"
                HeightRequest="60"
                CornerRadius="30"
                BackgroundColor="#F44336"
                TextColor="White"
                Clicked="Esci_Clicked" />

        </VerticalStackLayout>
</ContentPage>