<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectWork_Memory.View.DifficoltaDifficile"
             BackgroundColor="#512BD4"             
             Title="DifficoltaDifficile">



   <Grid>
        


        <ScrollView>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                
                <StackLayout VerticalOptions="CenterAndExpand"
                             HorizontalOptions="CenterAndExpand"
                             Padding="20">
                    <Grid x:Name="GameGrid"
                          RowSpacing="6"
                          ColumnSpacing="6"
                          HorizontalOptions="Center"
                          VerticalOptions="Center"
                          WidthRequest="300"
                          HeightRequest="600">

                    
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                  
                        <Button Grid.Row="0" Grid.Column="0" BackgroundColor="LightBlue" />
                        <Button Grid.Row="0" Grid.Column="1" BackgroundColor="LightBlue" />
                        <Button Grid.Row="0" Grid.Column="2" BackgroundColor="LightBlue" />
                        <Button Grid.Row="0" Grid.Column="3" BackgroundColor="LightBlue" />

                        <Button Grid.Row="1" Grid.Column="0" BackgroundColor="LightBlue" />
                        <Button Grid.Row="1" Grid.Column="1" BackgroundColor="LightBlue" />
                        <Button Grid.Row="1" Grid.Column="2" BackgroundColor="LightBlue" />
                        <Button Grid.Row="1" Grid.Column="3" BackgroundColor="LightBlue" />

                        <Button Grid.Row="2" Grid.Column="0" BackgroundColor="LightBlue" />
                        <Button Grid.Row="2" Grid.Column="1" BackgroundColor="LightBlue" />
                        <Button Grid.Row="2" Grid.Column="2" BackgroundColor="LightBlue" />
                        <Button Grid.Row="2" Grid.Column="3" BackgroundColor="LightBlue" />

                        <Button Grid.Row="3" Grid.Column="0" BackgroundColor="LightBlue" />
                        <Button Grid.Row="3" Grid.Column="1" BackgroundColor="LightBlue" />
                        <Button Grid.Row="3" Grid.Column="2" BackgroundColor="LightBlue" />
                        <Button Grid.Row="3" Grid.Column="3" BackgroundColor="LightBlue" />

                        <Button Grid.Row="4" Grid.Column="0" BackgroundColor="LightBlue" />
                        <Button Grid.Row="4" Grid.Column="1" BackgroundColor="LightBlue" />
                        <Button Grid.Row="4" Grid.Column="2" BackgroundColor="LightBlue" />
                        <Button Grid.Row="4" Grid.Column="3" BackgroundColor="LightBlue" />

                        <Button Grid.Row="5" Grid.Column="0" BackgroundColor="LightBlue" />
                        <Button Grid.Row="5" Grid.Column="1" BackgroundColor="LightBlue" />
                        <Button Grid.Row="5" Grid.Column="2" BackgroundColor="LightBlue" />
                        <Button Grid.Row="5" Grid.Column="3" BackgroundColor="LightBlue" />

                        <Button Grid.Row="6" Grid.Column="0" BackgroundColor="LightBlue" />
                        <Button Grid.Row="6" Grid.Column="1" BackgroundColor="LightBlue" />
                        <Button Grid.Row="6" Grid.Column="2" BackgroundColor="LightBlue" />
                        <Button Grid.Row="6" Grid.Column="3" BackgroundColor="LightBlue" />

                        <Button Grid.Row="7" Grid.Column="0" BackgroundColor="LightBlue" />
                        <Button Grid.Row="7" Grid.Column="1" BackgroundColor="LightBlue" />
                        <Button Grid.Row="7" Grid.Column="2" BackgroundColor="LightBlue" />
                        <Button Grid.Row="7" Grid.Column="3" BackgroundColor="LightBlue" />
                    </Grid>
                </StackLayout>
            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>